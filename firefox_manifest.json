{
  "author": "Lorentz",
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "48.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": {
      "16": "favicon.png",
      "48": "48x48.png",
      "128": "icon_128.png"
    },
    "default_title": "Stoned Ape Tools"
  },

  "content_security_policy": "script-src 'self' https://example.com; object-src 'self'",

  "content_scripts": [
    {
      "matches": ["*://np.ironhelmet.com/*"],
      "js": ["intel.js"]
    }
  ],

  "description": "For stoned ape use. This is a plugin for the game Neptune's Pride. Currently it just extends the chat communication between players by allowing buttons that will auto fill the next research project the player is working on. ",

  "icons": {
    "48": "48x48.png",
    "128": "icon_128.png"
  },

  "manifest_version": 2,

  "name": "Stoned Ape Tools",

  "page_action": {
    "default_icon": {
      "48": "48x48.png",
      "128": "icon_128.png"
    },
    "default_title": "Stoned Ape Tools"
  },

  "host_permissions": ["*://np.ironhelmet.com/*"],
  "permissions": [
    "clipboardWrite",
    "webNavigation",
    "cookies"
  ],

  "version": "2.7",

  "user_scripts": {
    "api_script": "intel.js"
  }
}

{
  "update_url": "https://clients2.google.com/service/update2/crx",
  
    "name": "Stoned Ape Tools",
    "description": "Tools that only a stoned ape could use. ",
    "version": "2.9",
    "manifest_version": 2,  
    "permissions": [
      "scripting",
      "cookies"
    ],
    "host_permissions": [
      "*://np.ironhelmet.com/*"
    ],
    "content_scripts": [
      {
        "matches": [ "https://np.ironhelmet.com/*" ],
        "css": [ "intel.css" ]
      }
    ],
    "background": {
      "scripts": ["worker.js"]
    },
  
    "icons": {
      "16": "favicon.png",
      "48": "favicon.png",
      "128": "favicon.png"
    }
  }
  